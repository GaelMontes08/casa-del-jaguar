---
import { getLangFromUrl, getLocalizedPath } from '@/i18n/utils';

const lang = getLangFromUrl(Astro.url);
const currentPath = Astro.url.pathname;

// Flag components as SVGs
const flags: Record<string, string> = {
  es: `<svg viewBox="0 0 24 18" class="w-6 h-4">
    <rect width="24" height="6" fill="#c60b1e"/>
    <rect y="6" width="24" height="6" fill="#ffc400"/>
    <rect y="12" width="24" height="6" fill="#c60b1e"/>
  </svg>`,
  en: `<svg viewBox="0 0 24 18" class="w-6 h-4">
    <rect width="24" height="18" fill="#012169"/>
    <path d="M0,0 L24,18 M24,0 L0,18" stroke="#fff" stroke-width="2"/>
    <path d="M12,0 L12,18 M0,9 L24,9" stroke="#fff" stroke-width="3"/>
    <path d="M12,0 L12,18 M0,9 L24,9" stroke="#c8102e" stroke-width="2"/>
    <path d="M0,0 L24,18" stroke="#c8102e" stroke-width="1"/>
    <path d="M24,0 L0,18" stroke="#c8102e" stroke-width="1"/>
  </svg>`
};
---

<div class="relative inline-block text-center">
  <div class="group">
    <button type="button" class="inline-flex items-center justify-center rounded-md shadow-sm px-3 py-2 bg-white text-sm font-medium text-brand-secondary hover:bg-brand-light focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-brand-primary font-gotham" id="language-menu" aria-expanded="true" aria-haspopup="true">
      <span set:html={flags[lang]} class="mr-2"></span>
      <svg class="-mr-1 ml-2 h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
        <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
      </svg>
    </button>

    <div class="opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 origin-top-right absolute right-0 mt-2 w-full rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 z-50">
      <div class="py-1" role="menu" aria-orientation="vertical" aria-labelledby="language-menu">
        {Object.entries(flags).map(([langCode, flagSvg]) => (
          <a 
            href={getLocalizedPath(currentPath, lang, langCode)} 
            class={`flex items-center px-4 py-2 text-sm hover:bg-brand-light font-gotham ${lang === langCode ? 'bg-brand-light text-brand-primary font-medium' : 'text-brand-secondary'}`}
            role="menuitem"
          >
            <span set:html={flagSvg} class="mr-3"></span>
          </a>
        ))}
      </div>
    </div>
  </div>
</div>

<style>
  .group:hover .group-hover\:opacity-100 {
    opacity: 1;
  }
  .group:hover .group-hover\:visible {
    visibility: visible;
  }
</style>
