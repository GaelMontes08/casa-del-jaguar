    mainMenu: "Main Menu",
    help: "Help",
    callToday: "Call Today",
    newsletter: "Newsletter Sign-Up",
    mainMenuLinks: [
      { href: '/en/', label: 'Home' },
      { href: '/en/experience', label: 'Experience' },
      { href: '/en/retreat', label: 'Retreat' },
      { href: '/en/our-story', label: 'Our Story' },
      { href: '/en/testimonials', label: 'Testimonials' },
      { href: '/en/blog', label: 'Blog' },
      { href: '/en/gallery', label: 'Gallery' },
      { href: '/en/safety', label: 'Safety' }
