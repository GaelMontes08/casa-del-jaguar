    helpLinks: [
      { href: '/en/book-now', label: 'Book Now' },
      { href: '/en/contact', label: 'Contact Us' },
      { href: '/en/faq', label: 'FAQ' },
      { href: '/en/affiliates', label: 'Affiliates' },
