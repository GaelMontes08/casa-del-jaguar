---
import { getLangFromUrl, useTranslations, translatePath } from '@/i18n/utils';
import LanguageSwitcher from './LanguageSwitcher.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<header class="bg-white shadow-sm border-b header-with-banner">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <div class="flex items-center">
        <a href={translatePath('/', lang)} class="flex items-center space-x-2">
          <span class="text-2xl font-bold text-brand-dark font-georgia">Casa del Jaguar</span>
        </a>
      </div>
      
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-4">
          <a href={translatePath('/', lang)} class="text-brand-secondary hover:text-brand-primary px-3 py-2 rounded-md text-sm font-medium font-gotham">{t('nav.home')}</a>
          <a href={translatePath('/about', lang)} class="text-brand-secondary hover:text-brand-primary px-3 py-2 rounded-md text-sm font-medium font-gotham">{t('nav.about')}</a>
          <a href={translatePath('/services', lang)} class="text-brand-secondary hover:text-brand-primary px-3 py-2 rounded-md text-sm font-medium font-gotham">{t('nav.services')}</a>
          <a href={translatePath('/contact', lang)} class="text-brand-secondary hover:text-brand-primary px-3 py-2 rounded-md text-sm font-medium font-gotham">{t('nav.contact')}</a>
        </div>
      </div>
      
      <div class="flex items-center space-x-4">
        <LanguageSwitcher />
        <div class="md:hidden">
          <button type="button" class="text-brand-secondary hover:text-brand-primary">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </div>
    </div>
  </nav>
</header>

<style>
  .header-with-banner {
    padding-top: 64px; /* Mobile: matches banner min-height */
  }
  
  @media (min-width: 640px) {
    .header-with-banner {
      padding-top: 48px; /* Tablet: matches banner min-height */
    }
  }
  
  @media (min-width: 768px) {
    .header-with-banner {
      padding-top: 36px; /* Desktop: matches banner height */
    }
  }
</style>
