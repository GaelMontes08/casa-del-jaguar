---
import Layout from '@/layouts/Layout.astro';
import { useTranslations, getStaticPaths } from '@/i18n/utils';

export { getStaticPaths };

const { lang } = Astro.params;
const t = useTranslations(lang as 'es' | 'en');
---

<Layout title={t('contact.title')} description={t('contact.subtitle')} keywords={t('contact.keywords')}>
  <main class="py-16 bg-gray-50 min-h-screen">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">{t('contact.title')}</h1>
        <p class="text-xl text-gray-600">
          {t('contact.subtitle')}
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <div class="bg-white rounded-lg shadow-lg p-8">
          <h2 class="text-2xl font-semibold mb-6">{t('contact.form.title')}</h2>
          <form id="contact-form" class="space-y-6">
            <input type="hidden" name="language" value={lang} />
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                {t('contact.form.name')} *
              </label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
              />
            </div>
            
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                {t('contact.form.email')} *
              </label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
              />
            </div>
            
            <div>
              <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                {t('contact.form.phone')}
              </label>
              <input 
                type="tel" 
                id="phone" 
                name="phone"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
              />
            </div>
            
            <div>
              <label for="subject" class="block text-sm font-medium text-gray-700 mb-2">
                {t('contact.form.subject')} *
              </label>
              <select 
                id="subject" 
                name="subject" 
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
              >
                <option value="">{t('contact.form.subject.placeholder')}</option>
                <option value="ceremony">{t('contact.form.subject.ceremony')}</option>
                <option value="retreat">{t('contact.form.subject.retreat')}</option>
                <option value="integration">{t('contact.form.subject.integration')}</option>
                <option value="other">{t('contact.form.subject.other')}</option>
              </select>
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
                {t('contact.form.message')} *
              </label>
              <textarea 
                id="message" 
                name="message" 
                rows="5" 
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
                placeholder={t('contact.form.message.placeholder')}
              ></textarea>
            </div>
            
            <button 
              type="submit"
              id="submit-btn"
              class="w-full bg-gradient-to-r from-[#D99D55] to-[#B8854A] text-white py-3 px-6 rounded-lg hover:from-[#B8854A] hover:to-[#D99D55] transition-all duration-300 font-medium disabled:opacity-50 disabled:cursor-not-allowed font-gotham"
            >
              <span class="submit-text">{t('contact.form.submit')}</span>
              <span class="loading-text hidden">
                <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white inline" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                {lang === 'en' ? 'Sending...' : 'Enviando...'}
              </span>
            </button>
            
            <div id="success-message" class="hidden mt-4 p-4 bg-green-100 border rounded-lg">
              <div class="flex items-center">
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <span id="success-text"></span>
              </div>
            </div>
            
            <div id="error-message" class="hidden mt-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg">
              <div class="flex items-center">
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                </svg>
                <span id="error-text"></span>
              </div>
            </div>
          </form>
        </div>

        <div class="space-y-8">
          <div class="bg-white rounded-lg shadow-lg p-8">
            <h2 class="text-2xl font-semibold mb-6 text-brand-dark">{t('contact.info.title')}</h2>
            <div class="space-y-4">
              <div class="flex items-start space-x-3">
                <svg class="w-6 h-6 text-brand-primary mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <div>
                  <p class="font-medium text-brand-dark">Email</p>
                  <p class="text-brand-secondary">info@casadeljaguar.com</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-3">
                <svg class="w-6 h-6 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <div>
                  <p class="font-medium">{t('contact.form.phone')}</p>
                  <p class="text-gray-600">+1 (555) 123-4567</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-3">
                <svg class="w-6 h-6 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <div>
                  <p class="font-medium">{t('contact.info.location')}</p>
                  <p class="text-gray-600" set:html={t('contact.info.location.desc')}></p>
                </div>
              </div>
            </div>
          </div>

          <div class="bg-brand-cream rounded-lg p-6">
            <h3 class="text-lg font-semibold mb-3">{t('contact.info.hours')}</h3>
            <div class="space-y-2 text-dark-brand">
              <p>{t('contact.hours.weekdays')}</p>
              <p>{t('contact.hours.saturday')}</p>
              <p>{t('contact.hours.sunday')}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

</Layout>

<script>
// Extend Window interface for Google Analytics functions
declare global {
  interface Window {
    trackFormSubmission?: (formType: string, success: boolean) => void;
    trackBookingEvent?: (action: string, retreatType?: string) => void;
    trackVideoPlay?: (videoTitle: string) => void;
    trackContactAction?: (method: string) => void;
    trackPageView?: (pageType?: string, retreatType?: string) => void;
  }
}

document.addEventListener('DOMContentLoaded', function() {
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
  const submitText = submitBtn?.querySelector('.submit-text');
  const loadingText = submitBtn?.querySelector('.loading-text');
  const successMessage = document.getElementById('success-message');
  const errorMessage = document.getElementById('error-message');
  const successTextEl = document.getElementById('success-text');
  const errorTextEl = document.getElementById('error-text');
  
  // Get language from hidden input
  const langInput = document.querySelector('input[name="language"]') as HTMLInputElement;
  const lang = langInput?.value || 'es';
  
  // Validation messages
  const messages = {
    es: {
      nameRequired: 'El nombre es requerido',
      emailRequired: 'El email es requerido',
      emailInvalid: 'Por favor ingresa un email válido',
      subjectRequired: 'Por favor selecciona un asunto',
      messageRequired: 'El mensaje es requerido',
      messageMinLength: 'El mensaje debe tener al menos 10 caracteres',
      success: '¡Mensaje enviado exitosamente! Te contactaremos pronto.',
      error: 'Hubo un error al enviar el mensaje. Por favor, intenta de nuevo.',
      sending: 'Enviando...'
    },
    en: {
      nameRequired: 'Name is required',
      emailRequired: 'Email is required',
      emailInvalid: 'Please enter a valid email',
      subjectRequired: 'Please select a subject',
      messageRequired: 'Message is required',
      messageMinLength: 'Message must be at least 10 characters',
      success: 'Message sent successfully! We will contact you soon.',
      error: 'There was an error sending the message. Please try again.',
      sending: 'Sending...'
    }
  };
  
  const msg = messages[lang as keyof typeof messages] || messages.es;
  
  // Hide messages function
  function hideMessages() {
    successMessage?.classList.add('hidden');
    errorMessage?.classList.add('hidden');
  }
  
  // Show success message
  function showSuccess(text: string) {
    hideMessages();
    if (successTextEl && successMessage) {
      successTextEl.textContent = text;
      successMessage.classList.remove('hidden');
      successMessage.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }
  }
  
  // Show error message
  function showError(text: string) {
    hideMessages();
    if (errorTextEl && errorMessage) {
      errorTextEl.textContent = text;
      errorMessage.classList.remove('hidden');
      errorMessage.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }
  }
  
  // Validate email format
  function isValidEmail(email: string) {
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    return emailRegex.test(email);
  }
  
  // Validate form
  function validateForm(formData: FormData) {
    const name = formData.get('name')?.toString().trim();
    const email = formData.get('email')?.toString().trim();
    const subject = formData.get('subject')?.toString().trim();
    const message = formData.get('message')?.toString().trim();
    
    if (!name) {
      showError(msg.nameRequired);
      return false;
    }
    
    if (!email) {
      showError(msg.emailRequired);
      return false;
    }
    
    if (!isValidEmail(email)) {
      showError(msg.emailInvalid);
      return false;
    }
    
    if (!subject) {
      showError(msg.subjectRequired);
      return false;
    }
    
    if (!message) {
      showError(msg.messageRequired);
      return false;
    }
    
    if (message.length < 10) {
      showError(msg.messageMinLength);
      return false;
    }
    
    return true;
  }
  
  // Set loading state
  function setLoading(loading: boolean) {
    if (submitBtn && submitText && loadingText) {
      submitBtn.disabled = loading;
      if (loading) {
        submitText.classList.add('hidden');
        loadingText.classList.remove('hidden');
      } else {
        submitText.classList.remove('hidden');
        loadingText.classList.add('hidden');
      }
    }
  }
  
  // Form submission
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    hideMessages();
    
    const formData = new FormData(form);
    
    // Validate form
    if (!validateForm(formData)) {
      return;
    }
    
    // Convert FormData to object
    const data: Record<string, any> = {};
    formData.forEach((value, key) => {
      data[key] = value;
    });
    
    setLoading(true);
    
    try {
      const response = await fetch('/api/contact', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(data),
      });
      
      const result = await response.json();
      
      if (response.ok) {
        showSuccess(result.message || msg.success);
        form.reset();
        
        // Reset select to placeholder
        const subjectSelect = form.querySelector('#subject') as HTMLSelectElement;
        if (subjectSelect) {
          subjectSelect.selectedIndex = 0;
        }
        
        // Track successful form submission
        if (typeof window.trackFormSubmission === 'function') {
          window.trackFormSubmission('contact_form', true);
        }
      } else {
        throw new Error(result.error || msg.error);
      }
    } catch (error) {
      console.error('Contact form error:', error);
      const errorMessage = error instanceof Error ? error.message : msg.error;
      showError(errorMessage);
      
      // Track form submission error
      if (typeof window.trackFormSubmission === 'function') {
        window.trackFormSubmission('contact_form', false);
      }
    } finally {
      setLoading(false);
    }
  });
  
  // Real-time validation
  const nameInput = document.getElementById('name') as HTMLInputElement;
  const emailInput = document.getElementById('email') as HTMLInputElement;
  const subjectSelect = document.getElementById('subject') as HTMLSelectElement;
  const messageInput = document.getElementById('message') as HTMLTextAreaElement;
  
  // Remove error styling on input
  function removeErrorStyling(input: HTMLElement) {
    input?.classList.remove('border-red-500', 'focus:ring-red-500');
    input?.classList.add('border-gray-300', 'focus:ring-green-500');
  }
  
  function addErrorStyling(input: HTMLElement) {
    input?.classList.remove('border-gray-300', 'focus:ring-green-500');
    input?.classList.add('border-red-500', 'focus:ring-red-500');
  }
  
  // Add real-time validation
  nameInput?.addEventListener('input', () => {
    hideMessages();
    if (nameInput.value.trim()) {
      removeErrorStyling(nameInput);
    }
  });
  
  emailInput?.addEventListener('input', () => {
    hideMessages();
    if (emailInput.value.trim() && isValidEmail(emailInput.value.trim())) {
      removeErrorStyling(emailInput);
    } else if (emailInput.value.trim()) {
      addErrorStyling(emailInput);
    }
  });
  
  subjectSelect?.addEventListener('change', () => {
    hideMessages();
    if (subjectSelect.value) {
      removeErrorStyling(subjectSelect);
    }
  });
  
  messageInput?.addEventListener('input', () => {
    hideMessages();
    if (messageInput.value.trim() && messageInput.value.trim().length >= 10) {
      removeErrorStyling(messageInput);
    } else if (messageInput.value.trim()) {
      addErrorStyling(messageInput);
    }
  });
});
</script>
