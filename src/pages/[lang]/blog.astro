    author: 'Maestro Denis',
    image: '/img/aweking-to-the-divine-inaugural-encounter-with-mother-ayahuasca.webp',
    readTime: '12 min',
    category: 'Experiences',
    slug: 'aweking-to-the-divine-inaugural-encounter-with-mother-ayahuasca'
  },
  {
    id: 'a-transformative-encounter-when-I-met-the-shaman-dan-reynolds',
    title: 'A Transformative Encounter: When I Met the Shaman Dan Reynolds',
    excerpt: 'The extraordinary story of how Maestro Denis met his teacher Dan Reynolds in 2011, a meeting orchestrated by ayahuasca visions that would change his life forever.',
    date: '2025-09-30',
    author: 'Maestro Denis',
    image: '/img/master-denis-montes-and-master-dan-reynolds.webp',
    readTime: '10 min',
    category: 'History',
    slug: 'a-transformative-encounter-when-I-met-the-shaman-dan-reynolds'
  },
  {
    id: 'my-first-ayahuasca-ceremony-with-master-dan',
    title: 'My First Ayahuasca Ceremony with Master Dan',
    excerpt: 'The extraordinary story of how Maestro Denis experienced his first ayahuasca ceremony with Master Dan, where he underwent a profound transformation and received revealing visions.',
    date: '2025-09-30',
    author: 'Maestro Denis',
    image: '/img/first-ayahuasca-ceremony-between-denis-and-dan.webp',
    readTime: '10 min',
    category: 'History',
    slug: 'my-first-ayahuasca-ceremony-with-master-dan'
  },
  {
    id: 'benefits-of-ceremonies-at-casa-del-jaguar',
    title: 'Benefits of Ceremonies at Casa del Jaguar',
    excerpt: 'Discover the profound physical, psychological, and spiritual benefits you can experience through Ayahuasca and Huachuma (San Pedro) ceremonies at our healing center.',
    date: '2025-10-02',
    author: 'Maestro Denis',
    image: '/img/benefits-of-ceremonies-at-casa-del-jaguar.webp',
    readTime: '8 min',
    category: 'Science',
    slug: 'benefits-of-ceremonies-at-casa-del-jaguar'
  },
  {
    id: 'importance-integration-after-ceremony',
    title: 'The Importance of Integration After the Ceremony',
    excerpt: 'Discover how to integrate the teachings and visions received during the ceremony into your daily life.',
    date: '2025-09-10',
    author: 'Therapist Ana Ruiz',
    image: '/blog/integracion.webp',
    readTime: '10 min',
    category: 'Integration',
    slug: 'importance-integration-after-ceremony'
  }
];
---

<Layout 
  title="Blog - Casa del Jaguar | Ancestral Wisdom and Natural Medicine" 
  description="Discover articles about ancestral medicine, ayahuasca ceremony preparation, integration, and Amazonian wisdom in our blog." 
  keywords="ayahuasca blog, ancestral medicine, ceremony preparation, integration, master plants, amazonian wisdom"
>
  <main>
    <section class="hero relative h-[500px] -mt-16 pt-16 flex items-center justify-center overflow-hidden">
      <div class="absolute inset-0 z-0">
        <img 
          src="/img/centro-pasadiso.webp" 
          alt="Casa del Jaguar Blog - Ancestral Wisdom"
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-black bg-opacity-50"></div>
      </div>

      <div class="relative z-10 max-w-6xl mx-auto px-4 md:px-8 text-center">
        <h1 class="scroll-animate text-5xl md:text-7xl font-bold text-white font-georgia mb-8 leading-tight">
          Blog of Wisdom
        </h1>
        
        <p class="scroll-animate text-xl md:text-[19px] text-white mb-12 max-w-4xl mx-auto font-gotham leading-relaxed">
          Articles about ancestral medicine, ceremonial preparation, and the healing path with Amazonian master plants.
        </p>
      </div>
    </section>

    <section class="py-20 bg-white scroll-animate">
      <div class="max-w-7xl mx-auto px-4 md:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {blogPosts.map((post) => (
            <article class="bg-white rounded-xl shadow-lg overflow-hidden group hover:shadow-xl transition-shadow duration-300">
              <div class="relative overflow-hidden">
                <img 
                  src={post.image}
                  alt={post.title}
                  class="w-full h-64 object-cover group-hover:scale-105 transition-transform duration-300"
                />
                <div class="absolute top-4 left-4">
                  <span class="bg-brand-primary text-brand-dark px-3 py-1 rounded-full text-sm font-medium">
                    {post.category}
                  </span>
                </div>
              </div>
              
              <div class="p-6">
                <div class="flex items-center text-sm text-gray-600 mb-3 space-x-4">
                  <span>{new Date(post.date).toLocaleDateString('en-US', { 
                    year: 'numeric', 
                    month: 'long', 
                    day: 'numeric' 
                  })}</span>
                  <span>•</span>
                  <span>{post.readTime}</span>
                </div>
                
                <h2 class="text-xl font-bold text-brand-dark font-georgia mb-3 group-hover:text-brand-primary transition-colors">
                  {post.title}
                </h2>
                
                <p class="text-gray-600 font-gotham text-sm mb-4 line-clamp-3">
                  {post.excerpt}
                </p>
                
                <div class="flex items-center justify-between">
                  <span class="text-sm text-gray-500">By {post.author}</span>
                  <a 
                    href={`/en/${post.slug}`}
                    class="text-brand-primary hover:text-brand-accent transition-colors font-medium text-sm"
                  >
                    Read more →
                  </a>
                </div>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>

    <section class="py-16 bg-brand-light scroll-animate">
      <div class="max-w-4xl mx-auto px-4 md:px-8 text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-brand-dark font-georgia mb-6">
          Receive Ancestral Wisdom
        </h2>
        <p class="text-brand-secondary font-gotham mb-8 max-w-2xl mx-auto">
          Subscribe to our newsletter to receive articles about ancestral medicine, preparation tips, and the latest news from Casa del Jaguar.
        </p>
        
        <form class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
          <input 
            type="email" 
            placeholder="Your email address"
            class="flex-1 px-4 py-3 border border-brand-accent rounded-lg focus:ring-2 focus:ring-brand-primary focus:border-transparent"
            required
          />
          <button 
            type="submit"
            class="bg-brand-primary text-brand-dark px-6 py-3 rounded-lg hover:bg-brand-accent transition-colors font-medium"
          >
            Subscribe
          </button>
        </form>
      </div>
    </section>
  </main>

  <script src="/js/scroll-animations.js" is:inline></script>
</Layout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>