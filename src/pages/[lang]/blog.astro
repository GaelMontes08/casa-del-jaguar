---
import Layout from '@/layouts/Layout.astro';
import { useTranslations } from '@/i18n/utils';

const t = useTranslations('en');

const blogPosts = [
  {
    id: 'how-to-prepare-for-ayahuasca-ceremony-complete-guide',
