---
import Layout from '@/layouts/Layout.astro';
import Hero from '@/components/Hero.astro';
import { useTranslations, getStaticPaths } from '@/i18n/utils';
import ImageSlider from '@/components/ImageSlider.astro';
import GoogleReviews from '@/components/GoogleReviews.astro';
import BookingForm from '@/components/BookingForm.astro';

export { getStaticPaths };

const { lang } = Astro.params;
const t = useTranslations(lang as 'es' | 'en');
---

<Layout title={t('home.title')} description={t('home.subtitle')}>
  <Hero />
  <main>
    <section class="py-20 bg-gradient-to-b from-brand-cream to-white">
      <div class="w-full max-w-[1500px] mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="max-w-4xl mx-auto mb-16">
          <h2 class="text-4xl md:text-5xl font-bold text-brand-dark mb-8 font-georgia leading-tight">
            Join a <span class="text-brand-gold">life-changing journey</span> of transformation
          </h2>
          <p class="text-[19px] md:text-md text-brand-dark mb-4 font-gotham leading-relaxed">
            Casa del Jaguar is the #1 all-inclusive luxury retreat specializing in ancestral plant medicine for personal growth, deep transformation, and soul healing.
          </p>
          <p class="text-[19px] md:text-md text-brand-dark font-gotham leading-relaxed mb-12">
            In the heart of the Amazon rainforest, we offer a sacred space where master plants, ceremonies guided by experienced maestros, mindful cuisine, and exclusive accommodations come together in a holistic transformation program. Here, every breath reconnects you with your true essence and every experience brings you closer to your most authentic self.
          </p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-20 scroll-animate">
          <div class="bg-brand-gold rounded-2xl px-8 pt-2 pb-4 shadow-lg hover:shadow-xl transition-shadow duration-300">
            <div class="text-4xl md:text-5xl font-bold text-white mb-4 font-georgia">
              1,000+
            </div>
            <p class="text-lg font-gotham text-brand-dark font-semibold">
              Transformational experiences since 2019
            </p>
          </div>
          <div class="bg-brand-gold rounded-2xl px-8 pt-2 pb-4 shadow-lg hover:shadow-xl transition-shadow duration-300">
            <div class="text-4xl md:text-5xl font-bold text-white mb-4 font-georgia">
              98%
            </div>
            <p class="text-lg font-gotham text-brand-dark font-semibold">
              Of guests report profound life changes
            </p>
          </div>
          <div class="bg-brand-gold rounded-2xl px-8 pt-2 pb-4 shadow-lg hover:shadow-xl transition-shadow duration-300">
            <div class="text-4xl md:text-5xl font-bold text-white mb-4 font-georgia">
              5,000+
            </div>
            <p class="text-lg font-gotham text-brand-dark font-semibold">
              Souls transformed in our sacred community
            </p>
          </div>
        </div>
      </div>
    </section>

    <section class="pt-15 md:py-15 bg-gradient-to-r from-[#fdf6e7] to-[#fdf9f1] relative overflow-hidden scroll-animate">
      <div class="absolute top-1/2 left-0 w-[600px] h-[600px] bg-gradient-to-br from-[#F2CF8D] to-[#ffefbb] rounded-full transform -translate-x-[20px] -translate-y-[800px] md:translate-x-[610px] md:-translate-y-[500px]"></div>
      
      <div class="max-w-[1500px] mx-auto flex flex-col md:flex-row items-end gap-16 px-4 md:px-8 relative z-10">
        <div class="w-full md:w-1/2 flex justify-end items-end order-2 md:order-1">
          <img src="/img/maestro-chaman-denis-montes.webp" alt="Maestro Chaman Denis Montes" class="w-full h-[500px] object-cover transform md:translate-y-[60px]" loading="lazy" />
        </div>
        <div class="w-full md:w-1/2 flex flex-col items-center md:items-start text-center md:text-left order-1 md:order-2">
          <blockquote class="text-2xl md:text-3xl font-georgia text-brand-dark mb-6 font-semibold leading-snug">
            “I was healed from a lifetime of suffering. Today I am happy and free. Casa del Jaguar has helped 1,000+ souls receive their miracle.”
          </blockquote>
          <div class="text-brand-dark text-base md:text-lg font-gotham mb-8 opacity-70">
            Casa del Jaguar has helped hundreds of people achieve their own healing and transformation.
          </div>
          <div class="text-sm text-brand-dark opacity-60 mb-8 font-gotham">
            — Denis Montes, Master Shaman & Chemical Engineer
          </div>
          <a href="/about" class="button-story transition-all inline-block bg-brand-gold text-brand-dark px-8 py-3 rounded-full font-bold text-lg shadow-lg font-gotham uppercase tracking-wide hover:scale-110">
            our story
          </a>
        </div>
      </div>
    </section>
    
    <section class="py-20 bg-gradient-to-l from-[#fdf6e7] to-[#fdf9f1] relative overflow-hidden">

