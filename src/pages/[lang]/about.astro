---
import Layout from '@/layouts/Layout.astro';
import Footer from '@/components/Footer.astro';
import { useTranslations, getStaticPaths } from '@/i18n/utils';

export { getStaticPaths };
export const prerender = true;

const { lang } = Astro.params;
const t = useTranslations(lang as 'es' | 'en');
---

<Layout title={t('about.title')} description={t('about.subtitle')} keywords={t('about.keywords')}>
  <main class="py-16">
    <div class="w-full max-w-[1920px] mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">{t('about.title')}</h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          {t('about.subtitle')}
        </p>
      </div>

      <section class="mb-16">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="text-3xl font-bold text-gray-900 mb-6">{t('about.mission.title')}</h2>
            <p class="text-gray-600 mb-4">
              {t('about.mission.desc1')}
            </p>
            <p class="text-gray-600">
              {t('about.mission.desc2')}
            </p>
          </div>
          <div class="bg-brand-light p-8 rounded-lg">
            <h3 class="text-xl font-semibold text-brand-dark mb-4">{t('about.values.title')}</h3>
            <ul class="space-y-2 text-brand-secondary">
              <li>• {t('about.values.tradition')}</li>
              <li>• {t('about.values.safety')}</li>
              <li>• {t('about.values.nature')}</li>
              <li>• {t('about.values.growth')}</li>
              <li>• {t('about.values.community')}</li>
            </ul>
          </div>
        </div>
      </section>

      <section class="mb-16">
        <h2 class="text-3xl font-bold text-center text-gray-900 mb-12">{t('about.team.title')}</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="w-32 h-32 bg-gray-200 rounded-full mx-auto mb-4"></div>
            <h3 class="text-xl font-semibold mb-2">Maestro Carlos</h3>
            <p class="text-gray-600">{lang === 'es' ? '25 años de experiencia en medicina tradicional amazónica' : '25 years of experience in traditional Amazonian medicine'}</p>
          </div>
          <div class="text-center">
            <div class="w-32 h-32 bg-gray-200 rounded-full mx-auto mb-4"></div>
            <h3 class="text-xl font-semibold mb-2">Maestra María</h3>
            <p class="text-gray-600">{lang === 'es' ? 'Especialista en cantos sagrados y sanación femenina' : 'Specialist in sacred songs and feminine healing'}</p>
          </div>
          <div class="text-center">
            <div class="w-32 h-32 bg-gray-200 rounded-full mx-auto mb-4"></div>
            <h3 class="text-xl font-semibold mb-2">Maestro José</h3>
            <p class="text-gray-600">{lang === 'es' ? 'Curandero tradicional con profundo conocimiento de plantas' : 'Traditional healer with deep knowledge of plants'}</p>
          </div>
        </div>
      </section>

      <section class="bg-gray-50 p-8 rounded-lg">
        <h2 class="text-3xl font-bold text-center text-gray-900 mb-8">{t('about.philosophy.title')}</h2>
        <div class="max-w-4xl mx-auto text-center">
          <p class="text-lg text-gray-600 mb-6">
            {t('about.philosophy.desc1')}
          </p>
          <p class="text-lg text-gray-600">
            {t('about.philosophy.desc2')}
          </p>
        </div>
      </section>
    </div>
  </main>

  <Footer />
</Layout>
