---
import Layout from '@/layouts/Layout.astro';
import { useTranslations } from '@/i18n/utils';

const t = useTranslations('es');

const blogPosts = [
  {
    id: 'how-to-prepare-for-ayahuasca-ceremony-complete-guide',
    title: 'Cómo Prepararse para una Ceremonia de Ayahuasca: Guía Completa',
    excerpt: 'Una guía detallada sobre la preparación física, mental y espiritual necesaria antes de participar en una ceremonia de ayahuasca.',
    date: '2025-09-20',
    author: 'Maestro Denis',
    image: '/img/how-to-prepare-for-ayahuasca-ceremony-complete-guide.webp',
    readTime: '8 min',
    category: 'Preparación',
    slug: 'how-to-prepare-for-ayahuasca-ceremony-complete-guide'
  },
  {
    id: 'beneficios-cientificos-medicina-ancestral',
    title: 'Los Beneficios Científicos de la Medicina Ancestral',
    excerpt: 'Exploramos las investigaciones científicas que respaldan los beneficios terapéuticos de las plantas maestras amazónicas.',
    date: '2025-09-15',
    author: 'Dr. María Fernández',
    image: '/blog/medicina-ancestral.webp',
    readTime: '12 min',
    category: 'Ciencia',
    slug: 'beneficios-cientificos-medicina-ancestral'
  },
  {
    id: 'importancia-integracion-despues-ceremonia',
    title: 'La Importancia de la Integración después de la Ceremonia',
    excerpt: 'Descubre cómo integrar las enseñanzas y visiones recibidas durante la ceremonia en tu vida cotidiana.',
    date: '2025-09-10',
    author: 'Terapeuta Ana Ruiz',
    image: '/blog/integracion.webp',
    readTime: '10 min',
    category: 'Integración',
    slug: 'importancia-integracion-despues-ceremonia'
  }
];
---

<Layout 
  title="Blog - Casa del Jaguar | Sabiduría Ancestral y Medicina Natural" 
  description="Descubre artículos sobre medicina ancestral, preparación para ceremonias de ayahuasca, integración y sabiduría amazónica en nuestro blog." 
  keywords="blog ayahuasca, medicina ancestral, preparación ceremonias, integración, plantas maestras, sabiduría amazónica"
>
  <main>
    <section class="hero relative h-[500px] -mt-16 pt-16 flex items-center justify-center overflow-hidden">
      <div class="absolute inset-0 z-0">
        <img 
          src="/img/centro-pasadiso.webp" 
          alt="Blog Casa del Jaguar - Sabiduría Ancestral"
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-black bg-opacity-50"></div>
      </div>

      <div class="relative z-10 max-w-6xl mx-auto px-4 md:px-8 text-center">
        <h1 class="scroll-animate text-5xl md:text-7xl font-bold text-white font-georgia mb-8 leading-tight">
          Blog de Sabiduría
        </h1>
        
        <p class="scroll-animate text-xl md:text-[19px] text-white mb-12 max-w-4xl mx-auto font-gotham leading-relaxed">
          Artículos sobre medicina ancestral, preparación ceremonial y el camino de sanación con plantas maestras amazónicas.
        </p>
      </div>
    </section>

    <section class="py-20 bg-white scroll-animate">
      <div class="max-w-7xl mx-auto px-4 md:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {blogPosts.map((post) => (
            <article class="bg-white rounded-xl shadow-lg overflow-hidden group hover:shadow-xl transition-shadow duration-300">
              <div class="relative overflow-hidden">
                <img 
                  src={post.image}
                  alt={post.title}
                  class="w-full h-64 object-cover group-hover:scale-105 transition-transform duration-300"
                />
                <div class="absolute top-4 left-4">
                  <span class="bg-brand-primary text-brand-dark px-3 py-1 rounded-full text-sm font-medium">
                    {post.category}
                  </span>
                </div>
              </div>
              
              <div class="p-6">
                <div class="flex items-center text-sm text-gray-600 mb-3 space-x-4">
                  <span>{new Date(post.date).toLocaleDateString('es-ES', { 
                    year: 'numeric', 
                    month: 'long', 
                    day: 'numeric' 
                  })}</span>
                  <span>•</span>
                  <span>{post.readTime}</span>
                </div>
                
                <h2 class="text-xl font-bold text-brand-dark font-georgia mb-3 group-hover:text-brand-primary transition-colors">
                  {post.title}
                </h2>
                
                <p class="text-gray-600 font-gotham text-sm mb-4 line-clamp-3">
                  {post.excerpt}
                </p>
                
                <div class="flex items-center justify-between">
                  <span class="text-sm text-gray-500">Por {post.author}</span>
                  <a 
                    href={`/${post.slug}`}
                    class="text-brand-primary hover:text-brand-accent transition-colors font-medium text-sm"
                  >
                    Leer más →
                  </a>
                </div>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>

    <section class="py-16 bg-brand-light scroll-animate">
      <div class="max-w-4xl mx-auto px-4 md:px-8 text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-brand-dark font-georgia mb-6">
          Recibe Sabiduría Ancestral
        </h2>
        <p class="text-brand-secondary font-gotham mb-8 max-w-2xl mx-auto">
          Suscríbete a nuestro boletín para recibir artículos sobre medicina ancestral, consejos de preparación y las últimas noticias de Casa del Jaguar.
        </p>
        
        <form class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
          <input 
            type="email" 
            placeholder="Tu correo electrónico"
            class="flex-1 px-4 py-3 border border-brand-accent rounded-lg focus:ring-2 focus:ring-brand-primary focus:border-transparent"
            required
          />
          <button 
            type="submit"
            class="bg-brand-primary text-brand-dark px-6 py-3 rounded-lg hover:bg-brand-accent transition-colors font-medium"
          >
            Suscribirse
          </button>
        </form>
      </div>
    </section>
  </main>

  <script src="/js/scroll-animations.js" is:inline></script>
</Layout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>