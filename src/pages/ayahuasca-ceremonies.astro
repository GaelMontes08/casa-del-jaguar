---
import Layout from '@/layouts/Layout.astro';
import { useTranslations } from '@/i18n/utils';

const t = useTranslations('es');

const pageTitle = "Ceremonias de Ayahuasca en Casa del Jaguar - Medicina Ancestral";
const pageDescription = "Experimenta ceremonias de ayahuasca auténticas y seguras en Casa del Jaguar. Sanación profunda con medicina ancestral amazónica, guiadas por chamanes experimentados en un centro con licencia médica en Iquitos, Perú.";
const pageKeywords = "ceremonias ayahuasca, medicina ancestral, chamanes amazónicos, ayahuasca Iquitos, medicina sagrada, sanación espiritual, Casa del Jaguar, retiro ayahuasca Perú, medicina vegetal, transformación espiritual";
---

<Layout 
  title={pageTitle}
  description={pageDescription}
  keywords={pageKeywords}
>
  <section class="hero relative h-[665px] -mt-16 pt-16 flex items-center justify-center overflow-hidden">
    <div class="absolute inset-0 z-0">
      <img 
        src="/img/maloca-ceremonial.webp" 
        alt="Ceremonias de ayahuasca en maloca ceremonial"
        class="w-full h-full object-cover"
      />
    </div>

    <div class="relative z-10 max-w-6xl mx-auto px-4 md:px-8 text-center">
      <h1 class="scroll-animate text-5xl md:text-7xl font-bold text-white font-georgia mb-8 leading-tight">
        Ceremonias de <br/><span class="text-brand-primary">Ayahuasca</span>
      </h1>
      
      <p class="scroll-animate text-xl md:text-[19px] text-white brand-cream mb-12 max-w-4xl mx-auto font-gotham leading-relaxed">
        Experimenta la medicina ancestral más poderosa de la Amazonía en ceremonias auténticas y seguras. Nuestros chamanes maestros te guían en un viaje de sanación profunda y transformación espiritual en un entorno sagrado y protegido, con supervisión médica profesional las 24 horas.
      </p>
    </div>
  </section>

</Layout>
