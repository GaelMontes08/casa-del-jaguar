---
import Layout from '@/layouts/Layout.astro';
import { useTranslations } from '@/i18n/utils';

const t = useTranslations('es');
---

<Layout title={t('home.title')} description={t('home.subtitle')}>
  
  <main>
    <section class="bg-gradient-to-b from-brand-light to-white py-20">
      <div class="w-full max-w-[1920px] mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl md:text-6xl font-bold text-brand-dark mb-6 font-georgia">
          Casa del <span class="text-brand-primary">Jaguar</span>
        </h1>
        <p class="text-xl text-brand-secondary mb-8 max-w-3xl mx-auto font-gotham">
          {t('home.subtitle')}
        </p>
        <div class="space-x-4">
          <a href="/contact" class="bg-brand-primary text-brand-dark px-8 py-3 rounded-lg hover:bg-brand-accent transition-colors font-medium font-gotham">
            {t('home.cta.contact')}
          </a>
          <a href="/about" class="border border-brand-primary text-brand-primary px-8 py-3 rounded-lg hover:bg-brand-light transition-colors font-medium font-gotham">
            {t('home.cta.learn')}
          </a>
        </div>
      </div>
    </section>

    <section class="py-16 bg-white">
      <div class="w-full max-w-[1920px] mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-center mb-12 text-brand-dark font-georgia">{t('home.services.title')}</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="text-center p-6 border border-brand-accent rounded-lg hover:shadow-lg transition-shadow">
            <h3 class="text-xl font-semibold mb-4 text-brand-dark font-georgia">{t('home.services.ceremonies.title')}</h3>
            <p class="text-brand-secondary font-gotham">{t('home.services.ceremonies.desc')}</p>
          </div>
          <div class="text-center p-6 border border-brand-accent rounded-lg hover:shadow-lg transition-shadow">
            <h3 class="text-xl font-semibold mb-4 text-brand-dark font-georgia">{t('home.services.retreats.title')}</h3>
            <p class="text-brand-secondary font-gotham">{t('home.services.retreats.desc')}</p>
          </div>
          <div class="text-center p-6 border border-brand-accent rounded-lg hover:shadow-lg transition-shadow">
            <h3 class="text-xl font-semibold mb-4 text-brand-dark font-georgia">{t('home.services.support.title')}</h3>
            <p class="text-brand-secondary font-gotham">{t('home.services.support.desc')}</p>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>
