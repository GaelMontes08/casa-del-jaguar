---
import { getLangFromUrl } from '@/i18n/utils';
import DiscountBanner from '@/components/DiscountBanner.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';

export interface Props {
  title: string;
  description?: string;
  keywords: string;
}

const { title, description = "Casa del Jaguar - Medicina Ayahuasca", keywords } = Astro.props;
const lang = getLangFromUrl(Astro.url);

import '@/styles/global.css';
import { SEO } from 'astro-seo';
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    
    <link rel="preconnect" href="https://use.typekit.net" crossorigin>
    
    <link rel="stylesheet" href="https://use.typekit.net/qtd6stw.css" media="print" onload="this.media='all'">
    <noscript><link rel="stylesheet" href="https://use.typekit.net/qtd6stw.css"></noscript>
    
    <style>
      body { 
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        margin: 0;
        background-color: white;
        color: #1a202c;
        max-width: 1920px;
        margin: 0 auto;
      }
      
      .header-nav {
        background-color: white;
        position: relative;
        z-index: 50;
      }
      
      .scroll-animate {
        opacity: 0;
        transform: translateY(30px);
        transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
      }
      
      .scroll-animate.animate-in {
        opacity: 1;
        transform: translateY(0);
      }
      
      .hero-section {
        position: relative;
        height: 665px;
        margin-top: -4rem;
        padding-top: 4rem;
        overflow: hidden;
      }
      
      h1, h2, h3, h4, h5, h6 {
        font-family: Georgia, serif;
        font-display: swap;
      }
      
      .text-brand-gold { color: #F2AB27; }
      .text-brand-dark { color: #402A1E; }
      .bg-brand-cream { background-color: #F2E8D5; }
    </style>
    
    <SEO
      title={title}
      description={description}
      openGraph={{
        basic: {
          title: title,
          type: "website",
          image: "/og-image.jpg",
        }
      }}
      twitter={{
        creator: "@casadeljaguar"
      }}
      extend={{
        link: [
          { rel: "icon", href: "/cj-icon-light.webp", type: "image/webp" },
          { rel: "apple-touch-icon", href: "/cj-icon-light.webp" },
        ],
        meta: [
          { name: "viewport", content: "width=device-width, initial-scale=1" },
          { name: "generator", content: Astro.generator },
          { name: "keywords", content: keywords },
        ],
      }}
    />
    
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-GX0T60THW9"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-GX0T60THW9');
      
      window.gtag = gtag;
    </script>

    <script is:inline>
        (function(h,o,t,j,a,r){
            h.hj=h.hj||function(){(h.hj.q=h.hj.q||[]).push(arguments)};
            h._hjSettings={hjid:6527991,hjsv:6};
            a=o.getElementsByTagName('head')[0];
            r=o.createElement('script');r.async=1;
            r.src=t+h._hjSettings.hjid+j+h._hjSettings.hjsv;
            a.appendChild(r);
        })(window,document,'https://static.hotjar.com/c/hotjar-','.js?sv=');
    </script>
  </head>
  <body class="bg-white text-gray-900 w-full max-w-[1920px] mx-auto">
    <DiscountBanner />
    <Header />
    <slot />
    <Footer />
    <script defer src="/js/modal.js"></script>
    <script defer src="/js/scroll-animations.js"></script>
  </body>
</html>
