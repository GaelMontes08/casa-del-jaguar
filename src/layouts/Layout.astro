---
import { getLangFromUrl } from '@/i18n/utils';
import DiscountBanner from '@/components/DiscountBanner.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';

export interface Props {
  title: string;
  description?: string;
  keywords: string;
}

const { title, description = "Casa del Jaguar - Medicina Ayahuasca", keywords } = Astro.props;
const lang = getLangFromUrl(Astro.url);

import '@/styles/global.css';
import { SEO } from 'astro-seo';
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://use.typekit.net/qtd6stw.css">
    <link rel="stylesheet" href="/css/scroll-animations.css">
    <SEO
      title={title}
      description={description}
      openGraph={{
        basic: {
          title: title,
          type: "website",
          image: "/og-image.jpg",
        }
      }}
      twitter={{
        creator: "@casadeljaguar"
      }}
      extend={{
        link: [
          { rel: "icon", href: "/cj-icon-light.webp", type: "image/webp" },
          { rel: "apple-touch-icon", href: "/cj-icon-light.webp" },
        ],
        meta: [
          { name: "viewport", content: "width=device-width, initial-scale=1" },
          { name: "generator", content: Astro.generator },
          { name: "keywords", content: keywords },
        ],
      }}
    />
  </head>
  <body class="bg-white text-gray-900 w-full max-w-[1920px] mx-auto">
    <DiscountBanner />
    <Header />
    <slot />
    <Footer />
    <script is:inline src="/js/scroll-animations.js"></script>
  </body>
</html>
