---
import { getLangFromUrl } from '@/i18n/utils';
import DiscountBanner from '@/components/DiscountBanner.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';

export interface Props {
  title: string;
  description?: string;
  keywords: string;
}

const { title, description = "Casa del Jaguar - Medicina Ayahuasca", keywords } = Astro.props;
const lang = getLangFromUrl(Astro.url);

import '@/styles/global.css';
import { SEO } from 'astro-seo';
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    
    <!-- Critical Resource Preloading -->
    <!-- Fonts - Preload with font-display: swap for better performance -->
    <link rel="preconnect" href="https://use.typekit.net" crossorigin>
    
    <!-- Load fonts with optimized font-display -->
    <link rel="stylesheet" href="https://use.typekit.net/qtd6stw.css" media="print" onload="this.media='all'">
    <noscript><link rel="stylesheet" href="https://use.typekit.net/qtd6stw.css"></noscript>
    
    <!-- Critical CSS for above-the-fold content -->
    <style>
      /* Critical styles for immediate rendering */
      body { 
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        margin: 0;
        background-color: white;
        color: #1a202c;
        max-width: 1920px;
        margin: 0 auto;
      }
      
      /* Header critical styles */
      .header-nav {
        background-color: white;
        position: relative;
        z-index: 50;
      }
      
      /* Hero section critical styles */
      .hero-section {
        position: relative;
        height: 665px;
        margin-top: -4rem;
        padding-top: 4rem;
        overflow: hidden;
      }
      
      /* Prevent layout shift for fonts */
      h1, h2, h3, h4, h5, h6 {
        font-family: Georgia, serif;
        font-display: swap;
      }
      
      /* Critical brand colors */
      .text-brand-gold { color: #F2AB27; }
      .text-brand-dark { color: #402A1E; }
      .bg-brand-cream { background-color: #F2E8D5; }
    </style>
    
    <SEO
      title={title}
      description={description}
      openGraph={{
        basic: {
          title: title,
          type: "website",
          image: "/og-image.jpg",
        }
      }}
      twitter={{
        creator: "@casadeljaguar"
      }}
      extend={{
        link: [
          { rel: "icon", href: "/cj-icon-light.webp", type: "image/webp" },
          { rel: "apple-touch-icon", href: "/cj-icon-light.webp" },
        ],
        meta: [
          { name: "viewport", content: "width=device-width, initial-scale=1" },
          { name: "generator", content: Astro.generator },
          { name: "keywords", content: keywords },
        ],
      }}
    />
  </head>
  <body class="bg-white text-gray-900 w-full max-w-[1920px] mx-auto">
    <DiscountBanner />
    <Header />
    <slot />
    <Footer />
    
    <!-- Defer non-critical JavaScript -->
    <script defer src="/js/scroll-animations.js"></script>
  </body>
</html>
